<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">

    <acl>
        <resources>
            <resource id="Magento_Backend::admin" title="Otto">

                <resource id="M2E_Otto::otto" title="Otto Integration" sortOrder="61">

                    <!-- Listing -->

                    <resource id="M2E_Otto::listings" title="Listings" sortOrder="1">
                        <resource id="M2E_Otto::listings_items" title="Items" sortOrder="1"/>
                        <resource id="M2E_Otto::listings_logs" title="Logs &#38; Events" sortOrder="2"/>
                    </resource>

                    <!-- Sales -->

                    <resource id="M2E_Otto::sales" title="Sales" sortOrder="2">
                        <resource id="M2E_Otto::sales_orders" title="Orders" sortOrder="1"/>
                        <resource id="M2E_Otto::sales_logs" title="Logs &#38; Events" sortOrder="2"/>
                    </resource>

                    <!-- Configuration -->

                    <resource id="M2E_Otto::configuration" title="Configuration" sortOrder="3">
                        <resource id="M2E_Otto::configuration_accounts" title="Accounts" sortOrder="1"/>
                        <resource id="M2E_Otto::configuration_categories" title="Categories" sortOrder="2"/>
                        <resource id="M2E_Otto::configuration_templates" title="Policies" sortOrder="3"/>
                        <resource id="M2E_Otto::configuration_settings" title="Settings" sortOrder="4"/>
                    </resource>

                    <!-- help center acl -->

                    <resource id="M2E_Otto::help_center" title="Help Center" sortOrder="4">
                        <resource id="M2E_Otto::help_center_health_status" title="Health Status" sortOrder="1"/>
                        <resource id="M2E_Otto::help_center_synchronization_log" title="Synchronization Logs"
                                  sortOrder="2"/>
                        <resource id="M2E_Otto::help_center_m2e_support" title="M2E Support" sortOrder="3"/>
                    </resource>

                </resource>

            </resource>
        </resources>
    </acl>

</config>
